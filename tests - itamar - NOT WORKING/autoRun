##!\bin\bash

for (( i = 1 ; i <= 10 ; i++ )) do
    ./bp_main mat_testShort${i}.txt > mat_outYours${i}
    DIFF= $(diff mat_outYours${i} mat_out${i})
    if [ "$DIFF" != "" ]; then
        echo Test number ${i} failed
        diff mat_outYours${i} mat_out${i}
    else
        echo Test number ${i} passed ":)"
    fi
done

for (( j = 11 ; j <= 20 ; j++ )) do
    ./bp_main mat_testLong${j}.txt > mat_outYours${j}
    diff mat_outYours${j} mat_out${j}
    if [ "$DIFF" != "" ]; then
        echo Test number ${j} failed
        diff mat_outYours${j} mat_out${j}
    else
        echo Test number ${j} passed ":)"
    fi
done
